<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sanskaar.shalini.mentalmaths.GameOver">

    <TextView
        android:id="@+id/timeupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Time up!"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayscore"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timeupText"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/displayscore"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/displayscore"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@color/red"
        android:text="Close"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9491490870756061/4010859757"/>

</RelativeLayout>
