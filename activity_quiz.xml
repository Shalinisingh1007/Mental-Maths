<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sanskaar.shalini.mentalmaths.Quiz">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="30s"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText"
            android:text="0/0"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionText"
            android:textStyle="bold"
            android:layout_below="@id/timerText"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionText"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:id="@+id/gridlayout"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/buttn0"
                android:layout_column="0"
                android:layout_row="0"
                android:backgroundTint="@android:color/holo_blue_light"
                android:onClick="check"
                android:tag="0"
                android:padding="10dp"
                android:textSize="25sp"
                tools:text="1" />

            <Button
                android:id="@+id/buttn1"
                android:layout_column="1"
                android:layout_row="0"
                android:padding="10dp"
                android:backgroundTint="?android:attr/colorActivatedHighlight"
                android:onClick="check"
                android:tag="1"
                android:textSize="25sp"
                tools:text="1" />

            <Button
                android:id="@+id/buttn2"
                android:layout_column="0"
                android:layout_row="1"
                android:padding="10dp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="check"
                android:tag="2"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttn3"
                android:layout_column="1"
                android:layout_row="1"
                android:padding="10dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:onClick="check"
                android:tag="3"
                android:text="1"
                android:textSize="25sp" />


        </GridLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9491490870756061/4010859757"/>


</RelativeLayout>
